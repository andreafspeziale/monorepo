{
  "name": "sample-app",
  "version": "1.0.0",
  "description": "Sample app in order to have a reference for future new applications",
  "author": "Andrea Francesco Speziale",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreafspeziale/monorepo"
  },
  "bugs": {
    "url": "https://github.com/andreafspeziale/monorepo/issues"
  },
  "keywords": [
    "nest",
    "nestjs",
    "typescript",
    "server"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:e2e": "jest --config jest-e2e.config.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "engines": {
    "node": ">=18.5.0"
  },
  "packageManager": "pnpm@7.17.1",
  "dependencies": {
    "@andreafspeziale/common": "workspace:*",
    "@andreafspeziale/logger": "workspace:*",
    "@nestjs/common": "9.1.6",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.1.6",
    "@nestjs/microservices": "9.1.6",
    "@nestjs/platform-express": "9.1.6",
    "@nestjs/swagger": "6.1.2",
    "@nestjs/terminus": "9.1.2",
    "cache-manager": "5.1.3",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cls-rtracer": "2.6.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.7",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@andreafspeziale/eslint-config-base": "workspace:*",
    "@andreafspeziale/jest-config-base": "workspace:*",
    "@andreafspeziale/prettier-config-base": "workspace:*",
    "@andreafspeziale/ts-config-base": "workspace:*",
    "@golevelup/ts-jest": "0.3.4",
    "@nestjs/cli": "9.1.5",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.6",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.1",
    "@types/node": "18.11.9",
    "@types/supertest": "2.0.12",
    "eslint": "8.26.0",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4",
    "webpack": "5.74.0"
  }
}
